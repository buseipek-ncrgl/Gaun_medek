# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/deneme_gemini

# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Server Port
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT (giriş oturumu)
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# İlk süper admin: POST /api/auth/seed-admin body: { secret, email, password }
# Örnek test hesaplar (admin/bolum/ogretmen): POST /api/auth/seed-demo body: { secret }
INIT_ADMIN_SECRET=your-one-time-secret
